<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Desc_Bayam"
    android:background="#D6F3C0">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/backlayout_desc_bayam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/back_desc_bayam"
            style="@style/Foxandroid.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/cardview_light_background"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:title="Deskripsi"/>

    </com.google.android.material.appbar.AppBarLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/gambarbayam"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/list_bayam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backlayout_desc_bayam" />

    <LinearLayout
        android:id="@+id/daunbayam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/gambarbayam">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daun Bayam"
            android:textColor="@color/tfe_color_primary_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textAlignment="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/latinbayam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Amaranthus Viridis)"
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/daunbayam"/>

    <View
        app:layout_constraintTop_toBottomOf="@+id/latinbayam"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#65274E08"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tempatDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wilayah:"
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/latinbayam"/>

    <TextView
        android:id="@+id/isiTempatDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seluruh wilayah di Indonesia."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tempatDeskripsi"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/isiTempatDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#65274E08"
        android:layout_marginTop="5dp"/>



    <TextView
        android:id="@+id/kandunganbayam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kandungan:"
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/isiTempatDeskripsi"/>

    <TextView
        android:id="@+id/isiKandunganBayam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Serat, Antioksidan, Fitonutrien, Asam lemak omega-3."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/kandunganbayam"/>

    <View
        app:layout_constraintTop_toBottomOf="@+id/isiKandunganBayam"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#65274E08"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/manfaatbayam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manfaat:"
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/isiKandunganBayam"/>

    <TextView
        android:id="@+id/manfaatbayam1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Melawan infeksi dan memnyembuhkan luka."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/manfaatbayam"/>
    <TextView
        android:id="@+id/manfaatbayam2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Menjaga kesehatan mata."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/manfaatbayam1"/>
    <TextView
        android:id="@+id/manfaatbayam3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Menjaga tulang dan mengurangi risiko osteoporosis."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/manfaatbayam2"/>
    <TextView
        android:id="@+id/manfaatbayam4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Memperlancar pencernaan, mencegah sembelit."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/manfaatbayam3"/>
    <TextView
        android:id="@+id/manfaatbayam5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Mengurangi risiko penyakit kardiovaskular."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/manfaatbayam4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/manfaatbayam5"
        android:textColor="@color/tfe_color_primary_dark"
        android:text="(Sumber: www.yankes.kemkes.go.id)"/>




</androidx.constraintlayout.widget.ConstraintLayout>