<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D6F3C0"
    tools:context=".InfoAplikasi">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/backlayout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/back_info"
        style="@style/Foxandroid.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@color/cardview_light_background"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="Info"
        tools:ignore="MissingConstraints" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/logoHerbCam"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/logofix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backlayout_info"/>

    <TextView
        android:id="@+id/Pembuat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pembuat:"
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/HerbCam"/>

    <TextView
        android:id="@+id/Pembuat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Devi Maziati, Kurnia Sindi, Alfina Puji Lestari."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/Pembuat1"/>

    <TextView
        android:id="@+id/HerbCam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HerbCam adalah aplikasi untuk mendeteksi daun herbal."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/logoHerbCam"/>



    <TextView
        android:id="@+id/kandunganbayam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitur:"
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Pembuat2"/>

    <TextView
        android:id="@+id/Fitur1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Deteksi dengan kamera."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/kandunganbayam"/>

    <TextView
        android:id="@+id/isiFitur1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitur ini akan mendeteksi nama daun herbal secara real-time melalui kamera."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/Fitur1"/>

    <TextView
        android:id="@+id/Fitur2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Deteksi dengan unggah."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/isiFitur1"/>

    <TextView
        android:id="@+id/isiFitur2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitur ini akan mendeteksi dengan mengunggah gambar melalui galeri untuk mengetahui nama dari daun herbal yang terdapat pada gambar tersebut."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/Fitur2"/>

    <TextView
        android:id="@+id/Fitur3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Daftar daun."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/isiFitur2"/>

    <TextView
        android:id="@+id/isiFitur3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dalam fitur ini terdapat informasi terkait nama ilmiah, wilayah, kandungan, dan manfaat dari setiap daun herbal."
        android:textColor="@color/tfe_color_primary_dark"
        android:textSize="16sp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/Fitur3"/>


</androidx.constraintlayout.widget.ConstraintLayout>